/var/log/cron
/var/log/maillog
/var/log/messages
/var/log/secure
/var/log/spooler 
{{ logrotate_additional_logs }}
{
    missingok
    rotate {{ logrotate_files_to_keep }}
    size {{ logrotate_file_size }}
    sharedscripts
    postrotate
        /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
    endscript
}
